    <!-- Background -->
    <ImageView
        android:id="@+id/background"
        android:layout_width="410dp"
        android:layout_height="730dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-24dp"
<!--        /*android:background="@drawable/background"-->
        />


    <!-- drawable/background.xml -->
    <vector
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:aapt="http://schemas.android.com/aapt"
        android:width="410dp"
        android:height="730dp"
        android:viewportWidth="410"
        android:viewportHeight="730"
        >

        <group>

            <clip-path
                android:pathData="M0 0H410V730H0V0Z"
                />

            <group
                android:translateX="1"
                android:translateY="0"
                android:pivotX="205"
                android:pivotY="365"
                android:scaleX="2"
                android:scaleY="2"
                android:rotation="90"
                >

                <path
                    android:pathData="M0 0V730H410V0"
                    >

                    <aapt:attr name="android:fillColor">

                        <gradient
                            android:type="linear"
                            android:startX="102.5"
                            android:startY="365"
                            android:endX="307.5"
                            android:endY="365"
                            >

                            <item
                                android:color="#00FFFFFF"
                                android:offset="0"
                                />

                            <item
                                android:color="#8BBAFF"
                                android:offset="1"
                                />

                        </gradient>

                    </aapt:attr>

                </path>

            </group>

        </group>

    </vector>



