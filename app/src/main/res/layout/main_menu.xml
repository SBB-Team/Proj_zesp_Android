<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="486dp"
            android:layout_height="274dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/pb_logo"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/fname_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/acme"
            android:text="@string/Services"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />


        <ImageView
            android:id="@+id/view_profile_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="72dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="150dp"
            android:scaleX="2"
            android:scaleY="2"
            app:layout_constraintEnd_toStartOf="@+id/car_wash_booking_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fname_e"
            app:srcCompat="@drawable/profile_logo" />

        <TextView
            android:id="@+id/view_profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:text="@string/view_profile_text"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_profile_logo" />

        <ImageView
            android:id="@+id/car_wash_booking_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="72dp"
            android:scaleX="1.65"
            android:scaleY="1.65"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fname_e"
            app:srcCompat="@drawable/calendar_logo" />

        <TextView
            android:id="@+id/car_wash_text"
            android:layout_width="100dp"
            android:layout_height="59dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="42dp"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:text="@string/Car_Wash_booking"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/car_wash_booking_logo" />

        <ImageView
            android:id="@+id/location_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="100dp"
            android:scaleX="1.7"
            android:scaleY="1.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_profile_text"
            app:srcCompat="@drawable/g_maps" />


        <TextView
            android:id="@+id/prices_text"
            android:layout_width="100dp"
            android:layout_height="59dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="42dp"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:text="@string/prices"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prices_logo" />

        <ImageView
            android:id="@+id/prices_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="72dp"
            android:scaleX="1.8"
            android:scaleY="1.8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_profile_text"
            app:srcCompat="@drawable/prices_logo" />

        <TextView
            android:id="@+id/location_text"
            android:layout_width="100dp"
            android:layout_height="59dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:text="@string/our_location"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location_logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>